<%= stylesheet_link_tag 'recepis', media: 'all' %>
<% @page_title = 'Edit' %>
<%= render "layouts/sidebar" %>

<div class="offset-2 mt-5">
 <h2>会員情報編集</h2>
  <%= form_with model: @customer, local: true do |f| %>
    <table class="table table-borderless offset-1">
      <tr>
        <th></th>
      </tr>
      <tr>
        <th><%= f.label :"氏名" %></th>
        <td><%= f.text_field :name, autofocus: true, size: "50" %></td>
      </tr>
      <tr>
        <th><%= f.label :"メールアドレス" %></th>
        <td><%= f.email_field :email, autofocus: true, autocomplete: "email", size: "50" %></td>
      </tr>
      <tr>
        <th></th>
        <td>
          <%= f.submit "保存", class: "btn btn-success rounded-pill" %>
        </td>
        <td>
          <%= link_to "退会", unsubscribe_customers_path ,class: "btn btn-danger rounded-pill" %>
        </td>
      </tr>
    </table>
  <% end %>
</div>